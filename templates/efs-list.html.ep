<div>
% for my $file (@{$files}) {
<div class="image-container">
<a href="<%= $file->[1] %>">
% if ( $file->[0] =~ m{ (png | jpg | jpeg | gif) $ }iox ) {
<img class="lazy" data-original="<%= $file->[2] %>?thumb=1" src="/placeholder.png" /><br/>
% }
% else {
<img src="/placeholder.png" /><br/>
% }
<%= $file->[0] %> </a>
</div>
% }
</div>
<script>
$("img.lazy").lazyload();
</script>
